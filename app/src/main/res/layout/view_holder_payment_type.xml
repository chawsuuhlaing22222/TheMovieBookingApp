<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_payment_type"
    android:padding="@dimen/margin_medium"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPaymentTypeIcon"
        app:srcCompat="@drawable/ic_upi"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaymentTypeName"
        android:layout_centerVertical="true"
        android:text="UPI"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/ivPaymentTypeIcon"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivForwardIconPaymentType"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"
        app:tint="@color/white"
        android:layout_marginRight="18dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
       android:layout_alignParentEnd="true"
        android:layout_width="8dp"
        android:layout_height="13dp"/>
</RelativeLayout>