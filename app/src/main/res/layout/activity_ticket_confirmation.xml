<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color111111"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium_2"
    tools:context=".activities.TicketConfirmationActivity">

    <!--    title-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTicketConfirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Ticket Confirmation"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_3x" />

    <!--    movie info card-->
<include
    android:id="@+id/layoutMovieTicket"
    android:layout_marginTop="@dimen/margin_card_medium_2"
    layout="@layout/view_holder_ticket_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <!--    qr code-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivQRCodeConfirmationScrn"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:fontFamily="@font/dm_sans_bold"
        android:text="WAG5LP1C"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_3x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TPIN : WKCSL96"
        android:fontFamily="@font/dm_sans_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_3x" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/dimen_60dp"
        android:paddingRight="@dimen/dimen_60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/lbl_done"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_3x"
        app:cornerRadius="@dimen/dimen_4dp" />


</LinearLayout>