<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen_22dp"
    android:layout_marginRight="@dimen/dimen_22dp"
    android:background="@color/color111111">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBackMovieSearchScrn"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_22dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearchMovieSearchScrn"
        app:srcCompat="@drawable/ic_baseline_search_white_24dp"
        android:layout_width="@dimen/dimen_22dp"
        android:layout_height="@dimen/dimen_22dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_card_medium_2"
        android:layout_toEndOf="@id/ivBackMovieSearchScrn"
        android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tvSearchMovieName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toStartOf="@id/ivFilterMovieSearchScrn"
        android:layout_toEndOf="@id/ivSearchMovieSearchScrn"
        android:background="@android:color/transparent"
        android:hint="@string/lbl_search_the_movie"
        android:textColor="@color/white"
        android:textColorHint="@color/color444444"
        android:textCursorDrawable="@drawable/ic_textline"
        android:textSize="@dimen/text_regular" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFilterMovieSearchScrn"
        app:srcCompat="@drawable/ic_baseline_filter_alt_green_24dp"
        android:layout_width="@dimen/dimen_22dp"
        android:layout_height="@dimen/dimen_22dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY" />
</RelativeLayout>