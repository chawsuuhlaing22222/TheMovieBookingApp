<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color111111"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSpinnerSelectedValue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_23dp"
        android:gravity="center_vertical"
        android:text="Yng"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18sp" />
    <View
        android:id="@+id/viewLineSeparator"
        android:layout_below="@id/tvSpinnerSelectedValue"
        android:background="@drawable/bg_borber_line_city"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>