<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/color444444"
                android:centerColor="@color/color222222"
                android:endColor="@color/color444444"
                />

            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item  android:gravity="bottom" android:width="20dp" android:height="20dp"  android:bottom="200dp" android:left="-10dp">
        <shape android:shape="oval">
            <size/>
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <item  android:gravity="bottom|right" android:width="20dp" android:height="20dp"  android:bottom="200dp" android:right="-10dp">
        <shape android:shape="oval">
            <size/>
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</layer-list>